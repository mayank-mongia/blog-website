
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>
    <div class="posts">
    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>
    <p class="time"><strong>Created on <%=post.time%></strong></p>
    </div>

    <% }) %>


<%- include("partials/footer"); -%>
